<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Products | @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProductsMVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link rel="icon" type="image/svg" href="~/svg/favicon.svg" />
</head>
<body>
    <header class="container mt-3">
        <nav class="navigation">
            <a asp-controller="Home" asp-action="Index">
                <img src="/svg/logo.svg" alt="Logo with the letter P typed in plaster font" />
            </a>
            <div class="space-x-4">
                <a asp-controller="Product" asp-action="Index" class="text-black text-lg">Products</a>
                <a asp-controller="Home" asp-action="About" class="text-black text-lg">About</a>
                <a asp-controller="Home" asp-action="ContactUs" class="text-black text-lg">Contact us</a>
            </div>
            <img src="/svg/sun.svg" alt="Light mode" />
        </nav>
    </header>
	<div class="container">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
