@model ProductsMVC.Models.Product

@{
    ViewData["Title"] = "Create";
}

<div class="mt-4 text-center">
    <a asp-action="Index">Modify products</a> &#62; <span class="text-gray-500">Create a product</span>
</div>

<h1 class="text-3xl text-center mt-4 mb-2 font-medium">Create product</h1>
<hr />

<div class="flex justify-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductName" class="mt-2"></label>
                <input asp-for="ProductName" class="text-lg font-medium block w-full mb-4 bg-gray-100 rounded-xl px-4 py-2" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductDescription" class="mt-2"></label>
                <textarea rows="4" asp-for="ProductDescription" class="text-lg font-medium block w-full mb-4 bg-gray-100 rounded-xl px-4 py-2"></textarea>
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductCategory" class="mt-2"></label>
                <input asp-for="ProductCategory" class="text-lg font-medium block w-full mb-4 bg-gray-100 rounded-xl px-4 py-2" />
                <span asp-validation-for="ProductCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductPrice" class="mt-2"></label>
                <input asp-for="ProductPrice" class="text-lg font-medium block w-full mb-4 bg-gray-100 rounded-xl px-4 py-2" />
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock" class="mt-2"></label>
                <input asp-for="Stock" class="text-lg font-medium block w-full mb-4 bg-gray-100 rounded-xl px-4 py-2" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl" class="mt-2"></label>
                <textarea rows="4" asp-for="ImageUrl" class="text-lg font-medium block w-full mb-4 bg-gray-100 rounded-xl px-4 py-2"></textarea>
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="px-10 py-2 bg-light-blue rounded font-bold text-lg text-white hover:bg-custom-blue transition-all duration-150 ease-out" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
