@model ProductsMVC.Models.Product

@{
    ViewData["Title"] = "Edit";
}

<div class="mt-4 text-center">
    <a asp-action="Index">Modify products</a> &#62; <span class="text-gray-500">@Model.ProductName</span>
</div>

<h1 class="text-3xl text-center mt-4 mb-2 font-medium">Edit Product</h1>

<hr />
<div class="flex justify-around items-center">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ProductName" class="mt-2"></label>
                <input asp-for="ProductName" class="text-lg font-medium block w-full mb-4 bg-gray-100 rounded-xl px-4 py-2" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductDescription" class="mt-2"></label>
                <textarea asp-for="ProductDescription" rows="6" class="text-lg font-medium block w-full mb-4 bg-gray-100 rounded-xl px-4 py-2"></textarea>
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductCategory" class="mt-2"></label>
                <input asp-for="ProductCategory" class="text-lg font-medium block w-full mb-4 bg-gray-100 rounded-xl px-4 py-2" />
                <span asp-validation-for="ProductCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductPrice" class="mt-2"></label>
                <input asp-for="ProductPrice" class="text-lg font-medium block w-full mb-4 bg-gray-100 rounded-xl px-4 py-2" />
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock" class="mt-2"></label>
                <input asp-for="Stock" class="text-lg font-medium block w-full mb-4 bg-gray-100 rounded-xl px-4 py-2" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl" class="mt-2"></label>
                <textarea asp-for="ImageUrl" rows="4" class="text-lg font-medium block w-full mb-4 bg-gray-100 rounded-xl px-4 py-2"></textarea>
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="px-10 py-2 bg-light-blue rounded font-bold text-lg text-white hover:bg-custom-blue transition-all duration-150 ease-out" />
                <a asp-action="Delete" asp-route-id="@Model.Id" class="px-10 py-2 border-1 border-red rounded font-bold text-lg text-red hover:bg-red hover:text-white transition-all duration-150 ease-out">Delete</a>
            </div>
        </form>
    </div>
    <img src=@Model.ImageUrl alt="Image of the link" class="w-[500px] h-[600px] object-fit rounded-xl" />
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
